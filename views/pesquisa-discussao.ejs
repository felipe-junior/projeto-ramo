<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wolforum - Home</title>

    <link rel="stylesheet" href="/css/main.css">
    <!--<link rel="stylesheet" href="/css/home.css">-->
</head>

<body>
    <%-include("partials/header.ejs") %>
    
    <main class="container">
        <section class="main-content" id="search">
            <div class="card-header">
                <h1>Pesquisa: "<%= title %>"</h1>
                <a class="btn" href="/perguntar">Abrir pergunta</a>
            </div>

            <div class="card-body">
                <% pergunta.forEach((discussion)=>{ %>
                    <div class="ask">
                        <h3><a class="grid-ask-title" href="/discussao/<%=discussion.id%>"><%= discussion.titulo %></a></h3>
                        <div class="grid-ask-user">Perguntado por: <%= discussion.author %></div>

                        <div class="grid-ask-category"><a class="btn btn-category" href=""><%= discussion.categorium.titulo %></a></div>
                        <div class="grid-ask-date"><%= discussion.createdAt %></div>
                    </div>
                <% }) %>
                   
                <div class="pagination">
                    <% if(result.page > 2) {%>
                            <a href="/<% result.page - 1 %>"> << anterior</a>
                    <%  }else if(result.page == 2){ %>
                            <a href="/"> << anterior</a>
                    <%  } %>
                
                    <% if(result.next === true) {%>
                        <a href="/<% result.page + 1 %>">prÃ³ximo >></a>
                    <% }%>
                </div>
            </div>
        </section>
    </main>

    <%-include("partials/footer.ejs") %>
</body>
</html>