<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Wolforum - Home</title>

    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <%-include("partials/header.ejs") %>
    
    <main class="container">
        <div class="card">
            <div class="card-header">
                <h1>Todas as discussões</h1>
                <div class="grid-item-btn">
                    <a href="http://">Abrir pergunta</a>

                </div>
            </div>
            <div class="card-body">
                
                <% perguntas.forEach(pergunta=> { %>
                 
                    <div class="ask">
                        <a class="title" href="/pergunta/id"><%= pergunta.titulo %> </a>              
                        <div class="grid-item-category">
                            <a href="/categoria" class="category">categoria</a>
                        </div>
                        <div class="user">Perguntado por: Usuário</div>
                        
                        <div class="date"><%=   pergunta.createdAt%></div>                   
                    </div>
             <% }) %>
                
            </div>

         
            <div class="card-footer">
                

           <% if (result.currentPage>2) { %>
                <a href="/<%= result.currentPage-1 %> ">Anterior</a>
           <% } else if(result.currentPage==2){
               %> <a href="/">Anterior</a> <%
           }%>
           <% if (result.proximo) { %>
                <a href="/<%= result.currentPage+1 %> ">Proximo</a>
           <% }
           %>
          
            </div>
            
        </div>            
    </main>

    <%-include("partials/footer.ejs") %>
</body>
</html>