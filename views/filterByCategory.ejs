<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wolforum - Home</title>

    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%-include("partials/header.ejs") %>
    
    <main class="container">
        <section class="main-content" id="home">
            <div class="card-header">
                <h1><%= category.title %> </h1>
            </div>

            <div class="card-body">
                <% discussions.forEach((discussion)=>{ %>
                    <div class="ask">
                        <h3><a class="grid-ask-title" href="/discussao/<%=discussion.slug%>"><%= discussion.title %></a></h3>
                        <div class="grid-ask-user">Perguntado por: <%=discussion?.login?.username%></div> 
                        <!-- AINDA FALTA LINKAR O USER -->
                        <div class="grid-ask-category">
                            <a class="btn btn-category" 
                            href="/categoria/<%= category.slug %>"
                            ><%= category.title %></a>
                        </div>

                        <div class="grid-ask-date"><%=formatDate(discussion.createdAt) %></div>
                    </div>
                <% }) %>
                   
                   
                </div>
            
            </div>

        </div>            
    </main>

    <%-include("partials/footer.ejs") %>
</body>
</html>